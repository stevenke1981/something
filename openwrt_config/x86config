# 系統設置
uci set system.@system[0].hostname=N5105PC
uci set system.@system[0].zonename=Asia/Taipei
uci set system.@system[0].timezone=CST-8

# 配置 LAN介面
uci set network.lan=interface
uci set network.lan.type='bridge'
uci set network.lan.proto='static'
uci set network.lan.ipaddr='192.168.80.240'
uci set network.lan.netmask='255.255.255.0'
uci add_list network.lan.ifname='eth0'
uci add_list network.lan.ifname='eth1'
uci add_list network.lan.ifname='eth2'



# 配置 WAN
uci set network.wan.ifname='eth3'
uci set network.wan.proto='pppoe'
uci set network.wan.username='888@hinet.net'
uci set network.wan.password='12345678'

# 配置 WAN6
uci set network.wan6.ifname='eth3'
uci set network.wan6.proto='dhcpv6'

# 關閉ipv6
uci set network.lan.ipv6='0'
uci set dhcp.lan.ra='0'
uci set network.wan.ipv6='0'
uci set dhcp.lan.dhcpv6='0'


# 应用配置
uci commit

#/etc/init.d/firewall disable
/etc/init.d/odhcpd disable
